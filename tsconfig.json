{
  "compilerOptions": {
    "target": "ES6", // Define a versão do ECMAScript
    "module": "CommonJS", // Define o formato do módulo como ES Modules
    "moduleResolution": "Node", // Define como os módulos são resolvidos
    "outDir": ".", // Define o diretório de saída para os arquivos compilados
    "rootDir": "./src", // Define o diretório raiz dos arquivos TypeScript
    "strict": true, // Habilita verificações de tipo estritas
    "esModuleInterop": true, // Permite interoperabilidade entre CommonJS e ES Modules
    "skipLibCheck": true // Ignora a verificação de tipos nas bibliotecas de definição
  },
  "include": ["src/**/*.ts"], // Inclui todos os arquivos TypeScript na pasta src
  "exclude": ["node_modules"] // Exclui a pasta node_modules
}
